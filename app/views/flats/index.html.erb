<div class="my-container">
  <h1>Flats</h1>
  <div class="cards">
  <% @flats.each do |flat| %>
  <div class="card-trip">
    <%= image_tag flat["imageUrl"] %>
    <div class="card-trip-infos">
      <div>
        <h2><%= flat["name"] %></h2>
        <p>Short description here!</p>
      </div>
      <h2 class="card-trip-pricing"><%= flat["price"] %> <%= flat["priceCurrency"] %></h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
  <% end %>
  </div>
</div>
